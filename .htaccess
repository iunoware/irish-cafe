<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # If file or directory exists, serve it normally
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Otherwise route everything to index.html
  RewriteRule ^ index.html [L]
</IfModule>
